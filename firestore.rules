rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Transactions: Users can only create their own, read their own, and cannot update.
    match /transactions/{txId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Only backend admin SDK can update status
    }

    // Data Plans: Publicly readable (fetched by app), writable only by backend
    match /data_plans/{planId} {
      allow read: if true;
      allow write: if false;
    }

    // Beneficiaries: Users can manage their own saved beneficiaries
    match /beneficiaries/{docId} {
      allow read, write: if request.auth != null && resource.data.uid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // Default: Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
